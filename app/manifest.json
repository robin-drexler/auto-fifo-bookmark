{
    "name": "Recents",
    "version": "0.0.1",
    "icons": {
        "16": "/img/icons/icon_16.png",
        "48": "/img/icons/icon_48.png",
        "128": "/img/icons/icon_128.png"
    },

    "description": "Yay, I'm so useless.",
    "permissions": [
        "bookmarks",
        "tabs",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["/js/background.js"]
    },

    "commands": {
        "bookmark-to-fifo": {
            "suggested_key": {
                "default": "Ctrl+Shift+D",
                "mac": "Command+Shift+D"
            },
            "description": "Bookmark current page to fifo folder"
        }
    },

    "manifest_version": 2
}
